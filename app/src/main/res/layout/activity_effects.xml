<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_effects"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.crusoeapps.whiteboardpicfix.EffectsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Edit your photo"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_above="@+id/btnSaturation"
        android:layout_centerHorizontal="true"
        android:paddingTop="-5dip"
        android:paddingBottom="-5dip"
        android:minHeight="10dp" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnReset"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/btnGrayscale"
        android:layout_toLeftOf="@+id/btnBrightness"
        android:layout_toStartOf="@+id/btnBrightness"
        android:maxHeight="50dip" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:paddingTop="-5dip"
        android:paddingBottom="-5dip"
        android:minHeight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnBrightness"
        android:layout_toEndOf="@+id/btnBrightness"
        android:maxHeight="50dip" />

    <Button
        android:id="@+id/btnSharpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="sharpen"
        android:text=" Sharpen"
        android:paddingTop="-5dip"
        android:paddingBottom="-5dip"
        android:minHeight="10dp"
        android:layout_above="@+id/btnSave"
        android:layout_toRightOf="@+id/btnBrightness"
        android:layout_toEndOf="@+id/btnBrightness" />

    <Button
        android:id="@+id/btnGrayscale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="g"
        android:text="Grayscale "
        android:paddingTop="-5dip"
        android:paddingBottom="-5dip"
        android:minHeight="10dp"
        android:layout_alignBaseline="@+id/btnSharpen"
        android:layout_toLeftOf="@+id/btnBrightness"
        android:layout_toStartOf="@+id/btnBrightness" />

    <Button
        android:id="@+id/btnBrightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="brightness"
        android:text="Brightness"
        android:paddingTop="-5dip"
        android:paddingBottom="-5dip"
        android:minHeight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView" />

    <Button
        android:id="@+id/btnContrast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="contrast"
        android:text="Contrast"
        android:paddingTop="-5dip"
        android:paddingBottom="-5dip"
        android:minHeight="10dp"
        android:layout_above="@+id/btnSharpen"
        android:layout_toRightOf="@+id/btnBrightness"
        android:layout_toEndOf="@+id/btnBrightness" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDecrease"
        android:minWidth="44dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="-5dip"
        android:paddingBottom="-5dip"
        android:layout_alignBaseline="@+id/btnSave"
        android:layout_alignBottom="@+id/btnSave"
        android:layout_toRightOf="@+id/btnReset"
        android:layout_toLeftOf="@+id/btnIncrease"
        android:layout_toStartOf="@+id/btnIncrease" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnIncrease"
        android:minWidth="44dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="-5dip"
        android:paddingBottom="-5dip"
        android:layout_alignBaseline="@+id/btnDecrease"
        android:layout_alignBottom="@+id/btnDecrease"
        android:layout_toLeftOf="@+id/btnSave" />

    <Button
        android:id="@+id/btnSaturation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="saturation"
        android:text="Saturation"
        android:paddingTop="-5dip"
        android:paddingBottom="-5dip"
        android:minHeight="10dp"
        android:layout_above="@+id/btnGrayscale"
        android:layout_toLeftOf="@+id/btnBrightness"
        android:layout_toStartOf="@+id/btnBrightness" />

</RelativeLayout>